    <div class="form-group">
        {{ form_label(form.biography) }}
        {{ form_errors(form.biography) }}
        {{ form_widget(form.biography) }}
    </div>
    <div class="form-group">
        {{ form_label(form.team) }}
        {{ form_errors(form.team) }}
        {{ form_widget(form.team) }}
    </div>
