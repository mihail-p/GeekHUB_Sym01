{% extends 'AppBundle:AdminTeam:admTeamShowAll.html.twig' %}

{% form_theme form _self %}
{% block integer_errors %}
    {%- if errors|length > 0 -%}

            {%- for error in errors -%}
                <br><small>error:<b> {{ error.message }}</b></small><br>
            {%- endfor -%}

    {%- endif -%}
{% endblock integer_errors %}


{% block adm_cont %}
    {#<form class="form-horizontal"> #}
    {#{{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}#}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
    </div>
    <div class="form-group">
        {{ form_label(form.age) }}
