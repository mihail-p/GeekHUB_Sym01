{% extends 'soccer/s_base.html.twig' %}
{% block body %}

    <div id="wrapper">
        <a id="mainUrl" href="{{ url('soc_static') }}">
            Main
        </a><br>
        {% if trueRout %}
            <span id="team" style="color: #2b542c">{{ team }}:</span><br>
         {% else %}
             <span style="color: red">Name of country: {{ team }} WRONG!!!</span><br>
        {% endif %}
        list of PLAYERS:<br>
        <ul>
            {% for item in listPlayers %}
                <li><a href="{{ path('player', {'team': team, 'player': item}) }}">{{ item }}</a> </li>
            {% endfor %}
        </ul>
        list of COACHES:<br>
        <ul>
            {% for item in listCoaches %}
                <li><a href="{{ path('coach', {'team': team, 'coach': item}) }}">{{ item }}</a> </li>
            {% endfor %}
        </ul>
        <p>
            <span class="header">Last played matches: </span><br>
            {{ lastMatches }}
        </p>
    </div>

{% endblock %}